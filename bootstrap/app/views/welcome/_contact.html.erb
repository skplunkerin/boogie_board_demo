<section id="contact">         
    <div class="container">    
        <div class="row">      
            <div class="col-lg-12 text-center">
                <h2><%= @geocontact.title_1.html_safe %></h2> 
                <hr class="star-primary">       
            </div>             
        </div>                 
        <div class="row">      
            <div class="col-lg-8 col-lg-offset-2">
                <form role="form">              
                    <div class="row">               
                        <div class="form-group col-xs-12 floating-label-form-group">
                            <label for="name">Name</label>  
                            <input class="form-control" type="text" name="name" placeholder="<%= @geocontact.name_placeholder.html_safe %>">
                        </div> 
                    </div>     
                    <div class="row">               
                        <div class="form-group col-xs-12 floating-label-form-group">
                            <label for="email">Email Address</label>
                            <input class="form-control" type="email" name="email" placeholder="<%= @geocontact.email_placeholder.html_safe %>">
                        </div> 
                    </div>     
                    <div class="row">                   
                        <div class="form-group col-xs-12 floating-label-form-group">
                            <label for="message">Message</label>
                            <textarea placeholder="<%= @geocontact.message_placeholder.html_safe %>" class="form-control" rows="5"></textarea>
                        </div> 
                    </div>     
                    <br>
                    <div class="row">                   
                        <div class="form-group col-xs-12">
                            <button type="submit" class="btn btn-lg btn-success" disabled="disabled">Send</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>
